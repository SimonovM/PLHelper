FuncLangsChooseScreen:

<FuncLangsChooseScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RoundedButton:
        text: "<-"
        size: 50, 50
        size_hint: None, None
        pos: (0, self.parent.size[1] - 50)
        on_press: root.manager.current = "lang_type"

    BoxLayout:
        orientation: "vertical"
        background_color: "blue"
        spacing: 10
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 0.4, 0.4

        RoundedButton:
            text: "Haskell"
            font_size: 26
        RoundedButton:
            text: "F#"
            font_size: 26
        RoundedButton:
            text: "Lisp"
            font_size: 26