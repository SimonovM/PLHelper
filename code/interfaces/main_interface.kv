MainScreen:

<MainScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        background_color: "blue"
        spacing: 10
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 0.4, 0.4

        Label:
            text: "PLHelper"
            color: "black"
            font_size: 40
            on_press:
        RoundedButton:
            text: "Выбор языка"
            size: 100, 50
        RoundedButton:
            text: "Выход"
            size: 100, 50
            on_press: exit(0)


<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	canvas.before:
		Color:
			rgba: (48/255,84/255,150/255,1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [40]