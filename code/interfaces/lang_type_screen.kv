LangTypeScreen:

<LangTypeScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RoundedButton:
        text: "<-"
        size: 50, 50
        size_hint: None, None
        pos: (0, self.parent.size[1] - 50)
        on_press: root.manager.current = "main"

    BoxLayout:
        orientation: "vertical"
        background_color: "blue"
        spacing: 10
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 0.6, 0.6

        Label:
            text: "Основная парадигма языка:"
            color: "black"
            font_size: 36
            on_press:
        RoundedButton:
            text: "Функциональный"
            font_size: 26
        RoundedButton:
            text: "Объектно-ориентированный"
            font_size: 26
        RoundedButton:
            text: "Логический"
            font_size: 26
