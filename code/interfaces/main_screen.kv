#: include ../interfaces/ui/rounded_button.kv

MainScreen:

<MainScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        background_color: "blue"
        spacing: 10
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 0.4, 0.4

        Label:
            text: "PLHelper"
            color: "black"
            font_size: 40
            on_press:
        RoundedButton:
            text: "Выбор языка"
            size: 100, 50
            font_size: 26
            on_press: root.manager.current = "lang_type"
        RoundedButton:
            text: "Выход"
            size: 100, 50
            font_size: 26
            on_press: exit(0)
